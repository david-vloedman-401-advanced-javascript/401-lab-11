{
  "swagger":2.0,
  "info": {
    "title": "Auth Server",
    "description": "Simple Auth Server",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://lab11-401.herokuapp.com"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "description": "Get all users",
        "responses": {
          "200": {
            "description": "Successfully returned users",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/getAll"
                }
              }
            }
          }
        }
      },
 
    "/signin": {
      "post": {
        "description": "Sign in with username and password",
        "responses": {
          "200": {
            "description": "Auth details verified",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/getAll"
                }
              }
            }
          }
        }
      },
	"/signup": {
      "post": {
        "description": "Create a username and password set",
        "responses": {
          "200": {
            "description": "Successfully added credentials to DB",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/getAll"
                }
              }
            }
          }
        }
      },
  "components": {
    "schemas": {
      "getAll": {
        "type": "object",
        "example": ["{}", "{}"]
      }
    }
  }
}
